<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSWS.Mobile.Views.JobOfferDetails"
             Title="{StaticResource GeneralPageTitle}">
    <ContentPage.Content>
        <TableView HasUnevenRows="True"
                   Intent="Data">
            <TableRoot>
                <TableSection Title="Tekst oglasa">
                    <ViewCell>
                        <Label Text="{Binding Job.Text}"
                               FontSize="Medium"
                               Margin="10" />
                    </ViewCell>
                </TableSection>
                <TableSection Title="Parsirani podaci">
                    <TextCell Text="Kategorija" Detail="{ Binding Job.Category }" />
                    <TextCell Text="Oglas postavljen" Detail="{ Binding Job.DateAdded }" />
                    <TextCell Text="Satnica" Detail="{ Binding Job.HourlyPay, StringFormat='{0} kn/h'}" />
                    <TextCell Text="Kontakt telefon" Detail="{ Binding Job.ContactPhone }"  />
                    <TextCell Text="Kontakt e-mail" Detail="{ Binding Job.ContactEmail }" />

                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>