<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSWS.Mobile.JobOffers"
             xmlns:local="clr-namespace:SSWS.Mobile">

    <ListView x:Name="JobOffersListView"
              ItemsSource="{Binding JobOffersCollection}"
              ItemTapped="JobOffersListView_ItemTapped"
              IsPullToRefreshEnabled="True"
              Refreshing="JobOffersListView_Refreshing"
              RowHeight="65"
              SeparatorVisibility="Default"
              SeparatorColor="Black">
        <ListView.ItemTemplate>
            <DataTemplate>
                <local:JobOfferCell />
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>
